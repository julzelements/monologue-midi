{
  "name": "@julzelements/monologue-midi",
  "version": "0.3.0",
  "description": "SysEx and MIDI CC encoder/decoder for the Korg Monologue",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/julzelements/monologue-midi.git"
  },
  "bugs": {
    "url": "https://github.com/julzelements/monologue-midi/issues"
  },
  "homepage": "https://github.com/julzelements/monologue-midi#readme",
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --watch --format esm,cjs --dts",
    "clean": "rm -rf dist",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "capture": "tsx src/sysex/utils/capture.ts",
    "prepublishOnly": "npm run test && npm run build"
  },
  "keywords": [
    "korg",
    "monologue",
    "midi",
    "sysex",
    "typescript",
    "synthesizer"
  ],
  "author": "Julian Scharf",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^24.8.1",
    "easymidi": "^3.1.0",
    "tsup": "^8.2.0",
    "typescript": "^5.6.3",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "tsx": "^4.20.6"
  }
}
